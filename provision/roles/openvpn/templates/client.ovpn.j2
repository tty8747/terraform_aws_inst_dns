client
  
dev tun
proto udp
remote {{ vpn_serv_or_ip }} {{ ovpn_port }}

resolv-retry infinite
nobind

user nobody
group nogroup

persist-key
persist-tun

ca keys/ca.crt
cert keys/{{ item }}.crt
key keys/{{ item }}.key

remote-cert-tls server

tls-auth keys/ta.key 1
key-direction 1

cipher AES-256-CBC
auth SHA256

verb 3

;mute 20
;comp-lzo

